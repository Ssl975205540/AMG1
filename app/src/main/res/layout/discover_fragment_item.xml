<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@drawable/relativelayoutselector"
    android:layout_height="50dp">


    <ImageView
        android:id="@+id/discoverItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"

        />

    <LinearLayout
        android:layout_toRightOf="@+id/discoverItemImageView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="13dp"
            android:id="@+id/discoverItemTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/discoverItemAdinfoTextView"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/discoverItemPriceTextView"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />






    </LinearLayout>



</RelativeLayout>