<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_title_item_adapter_listview_recommend_fragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:maxLines="2"
        android:textColor="@android:color/black"

        />


    <TextView
        android:id="@+id/textview_item_adapter_listview_recommend_fragment"
        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_item_adapter_listview_recommend_fragment"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        />
    <ImageView
        android:id="@+id/imageView_item_adapter_listview_recommend_fragment"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@mipmap/ahlib_carback"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/textview_title_item_adapter_listview_recommend_fragment"
        />


    <TextView
        android:id="@+id/textview_titlebelow_item_adapter_listview_recommend_fragment"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="10dp"
        android:layout_below="@+id/textview_title_item_adapter_listview_recommend_fragment"
        android:layout_height="wrap_content" />







</RelativeLayout>