<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lanou.amg1.recommendfragment.RecommendMoreActivity">



    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:background="@drawable/shape_hs"

        android:layout_height="50dp">

        <ImageView
            android:id="@+id/activity_recommend_more_imageview"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ahlib_close"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="22dp"
            android:text="更多"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>


<LinearLayout
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_below="@id/rr"
    android:background="#F0EFF5"
    android:layout_height="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:text="长按可拖动排序"

        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

</LinearLayout>




   <android.support.v7.widget.RecyclerView
       android:layout_below="@id/ll"
       android:id="@+id/activity_recommend_more_recyclerview"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v7.widget.RecyclerView>

</RelativeLayout>
