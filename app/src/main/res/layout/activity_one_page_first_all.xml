<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_hs"

        android:layout_height="50dp">

        <ImageView
            android:id="@+id/onePage_ImageView"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ahlib_close"
            />

        <TextView
            android:id="@+id/one_Page_First_Title"
            android:layout_width="wrap_content"
            android:textSize="22dp"
            android:text="精选推荐"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/one_Page_First_All_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

    <WebView

        android:id="@+id/one_Page_First_All_WebView"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent">


    </WebView>









</RelativeLayout>



</LinearLayout>
